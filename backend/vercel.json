{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/src/server.ts"
    }
  ],
  "functions": {
    "*.js": {
      "maxDuration": 60
    }
  }
}